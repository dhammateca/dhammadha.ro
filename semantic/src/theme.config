/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'dhammadaro';
@reset      : 'dhammadaro';

/* Elements */
@button     : 'dhammadaro';
@container  : 'dhammadaro';
@divider    : 'dhammadaro';
@flag       : 'dhammadaro';
@header     : 'dhammadaro';
@icon       : 'dhammadaro';
@image      : 'dhammadaro';
@input      : 'dhammadaro';
@label      : 'dhammadaro';
@list       : 'dhammadaro';
@loader     : 'dhammadaro';
@rail       : 'dhammadaro';
@reveal     : 'dhammadaro';
@segment    : 'dhammadaro';
@step       : 'dhammadaro';

/* Collections */
@breadcrumb : 'dhammadaro';
@form       : 'dhammadaro';
@grid       : 'dhammadaro';
@menu       : 'dhammadaro';
@message    : 'dhammadaro';
@table      : 'dhammadaro';

/* Modules */
@accordion  : 'dhammadaro';
@checkbox   : 'dhammadaro';
@dimmer     : 'dhammadaro';
@dropdown   : 'dhammadaro';
@embed      : 'dhammadaro';
@modal      : 'dhammadaro';
@nag        : 'dhammadaro';
@popup      : 'dhammadaro';
@progress   : 'dhammadaro';
@rating     : 'dhammadaro';
@search     : 'dhammadaro';
@shape      : 'dhammadaro';
@sidebar    : 'dhammadaro';
@sticky     : 'dhammadaro';
@tab        : 'dhammadaro';
@transition : 'dhammadaro';

/* Views */
@ad         : 'dhammadaro';
@card       : 'dhammadaro';
@comment    : 'dhammadaro';
@feed       : 'dhammadaro';
@item       : 'dhammadaro';
@statistic  : 'dhammadaro';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
